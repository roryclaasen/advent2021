root = true

[*]
charset = utf-8
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
indent_style = space

[*.md]
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[*.{json,yml,eslintrc,releaserc}]
indent_size = 2

[{.{input,testinput}]
insert_final_newline = false
trim_trailing_whitespace = false
