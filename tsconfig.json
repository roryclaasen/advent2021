{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "~commands/*": ["commands/*"],
      "~shared/*": ["shared/*"]
    },

    "declaration": true,

    "moduleResolution": "node",

    "strict": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,

    "removeComments": true,
    "noUncheckedIndexedAccess": true,
    "pretty": true,

    "importHelpers": true,
    "preserveSymlinks": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
